@model WarOfEmpires.Models.Alliances.DeclareWarModel

@{
    ViewBag.Title = "Declare war";
}

<h2>Declare war</h2>

<p>
    Declare war on another alliance below.
    A war between two alliances causes attacks between members of those alliances to result in additional casualties.
</p>

<p>
    If you are already in a non-aggression pact with this alliance, you will not be able to attack its members until you've dissolved the pact.
</p>

<form method="post" data-success-message="War has been declared.">
    <input type="hidden" asp-for="AllianceId" />
    <input type="hidden" asp-for="AllianceCode" />
    <input type="hidden" asp-for="AllianceName" />

    <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
            <div asp-validation-summary="ModelOnly" class="site-validation-summary text-danger"></div>

            <div class="mb-3">
                <label>Alliance code</label>
                <div class="form-control" readonly="readonly">@Model.AllianceCode</div>
            </div>

            <div class="mb-3">
                <label>Alliance name</label>
                <div class="form-control" readonly="readonly">@Model.AllianceName</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6 offset-6 col-md-3"><button type="submit" class="btn btn-primary w-100">Declare war</button></div>
    </div>
</form>
