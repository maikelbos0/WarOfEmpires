@model WarOfEmpires.Models.Alliances.InviteDetailsViewModel

@{
    ViewBag.Title = "Alliance invite";
}

<h2>Alliance invite</h2>

<div class="row">
    <div class="col-12 col-md-6 offset-md-3">
        <div class="mb-3">
            <label>Player</label>
            <a asp-controller="@Player.Route" asp-action="@nameof(Player.Details)" asp-route-id="@Model.PlayerId" class="w-100 btn btn-secondary text-start">@Model.PlayerName</a>
        </div>

        <div class="mb-3">
            <label>Date sent</label>
            <div class="form-control">@Model.Date.ToString(StringFormat.Date)</div>
        </div>

        <div class="mb-3">
            <label>Is read</label>
            <div class="form-control">@(Model.IsRead ? "Yes" : "No")</div>
        </div>

        <div class="mb-3">
            <label>Subject</label>
            <div class="form-control">@Model.Subject</div>
        </div>

        <div class="site-user-text">@Model.Body </div>
    </div>
</div>

<form asp-action="@nameof(Alliance.WithdrawInvite)" method="post" data-success-message="The invite has been withdrawn.">
    <input type="hidden" asp-for="Id" />

    <div class="row mt-3">
        <div class="col-6 offset-6 col-md-3"><button type="submit" class="btn btn-secondary w-100">Withdraw</button></div>
    </div>
</form>