@model WarOfEmpires.Models.Alliances.InviteDetailsViewModel

@{
    ViewBag.Title = "Alliance invite";
}

<h2>Alliance invite</h2>

<div class="row">
    <div class="col-12 col-md-6 offset-md-3">
        <div class="mb-3">
            <label>Player</label>
            @Html.ActionLink(Model.PlayerName, "Details", "Player", new { id = Model.PlayerId }, new { @class = "w-100 btn btn-secondary text-start" })
        </div>

        <div class="mb-3">
            <label>Date sent</label>
            <div class="form-control" readonly="readonly">@Model.Date.ToString(StringFormat.Date)</div>
        </div>

        <div class="mb-3">
            <label>Is read</label>
            <div class="form-control" readonly="readonly">@(Model.IsRead ? "Yes" : "No")</div>
        </div>

        <div class="mb-3">
            <label>Subject</label>
            <div class="form-control" readonly="readonly">@Model.Subject</div>
        </div>

        <div class="site-user-text">@Model.Body </div>
    </div>
</div>

@using (Html.BeginForm("WithdrawInvite", null, FormMethod.Post, new { data_success_message = "The invite has been withdrawn." })) {
    @Html.Hidden("id", Model.Id);

    <div class="row mt-3">
        <div class="col-6 offset-6 col-md-3"><button type="submit" class="btn btn-secondary w-100">Withdraw</button></div>
    </div>
}