@model WarOfEmpires.Models.Alliances.ReceivedInviteDetailsViewModel

@{
    ViewBag.Title = "Alliance invite";
}

<h2>Alliance invite</h2>

<div class="row">
    <div class="col-12 col-md-6 offset-md-3">
        <div class="form-group">
            <label>Alliance</label>
            @Html.ActionLink($"{Model.AllianceCode} - {Model.AllianceName}", "Details", "Alliance", new { id = Model.AllianceId }, new { @class = "form-control btn btn-secondary text-left" })
        </div>

        <div class="form-group">
            <label>Date received</label>
            <div class="form-control" readonly="readonly">@Model.Date.ToString(StringFormat.Date)</div>
        </div>

        <div class="form-group">
            <label>Subject</label>
            <div class="form-control" readonly="readonly">@Model.Subject</div>
        </div>

        <div class="site-user-text">@Model.Body </div>
    </div>
</div>

@using (Html.BeginForm("AcceptInvite", null, FormMethod.Post, new {
    data_success_message = "The invite has been accepted."
})) {
    @Html.Hidden("id", Model.Id)

    <div class="row mt-3">
        <div class="col-6 offset-6 col-md-3"><button type="submit" class="btn btn-primary form-control">Accept</button></div>
    </div>
}

@using (Html.BeginForm("RejectInvite", null, FormMethod.Post, new {
    data_success_message = "The invite has been rejected."
})) {
    @Html.Hidden("id", Model.Id)

    <div class="row mt-3">
        <div class="col-6 offset-6 col-md-3"><button type="submit" class="btn btn-secondary form-control">Reject</button></div>
    </div>
}