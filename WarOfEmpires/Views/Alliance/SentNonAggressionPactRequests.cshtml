@model System.Collections.Generic.IEnumerable<WarOfEmpires.Models.Alliances.SentNonAggressionPactRequestViewModel>

@{
    ViewBag.Title = "Sent non-aggression pact requests";
}

<h2>Sent non-aggression pact requests</h2>

<p>
    Below you can find the open non-aggression pact requests your alliance has sent.
    A non-aggression pact between two alliances prevents members of those alliances to attack each other.
</p>

<table class="table table-borderless table-striped">
    <thead>
        <tr>
            <th>Alliance code</th>
            <th>Alliance name</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var request in Model) {
            <tr>
                <td class="table-form-label">@request.Code</td>
                <td class="table-form-label">@request.Name</td>
                <td>
                    <form asp-action="@nameof(Alliance.WithdrawNonAggressionPactRequest)" method="post" data-success-message="Your non-aggression pact request has been withdrawn.">
                        <input type="hidden" name="id" value="@request.Id" />

                        <button type="submit" class="btn btn-secondary w-100">
                            <span class="d-none d-lg-inline">Withdraw</span>
                            <span class="d-lg-none">X</span>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>