@model WarOfEmpires.Models.Alliances.AllianceSearchModel

@{
    ViewBag.Title = "Alliances";
}

<h2>Alliances</h2>

<form id="alliancesSearch" class="search-form">
    <div class="d-flex flex-row">
        <div class="row flex-grow-1">
            <div class="col-2 col-form-label">
                @Html.LabelFor(a => a.Code)
            </div>

            <div class="col-4">
                @Html.TextBoxFor(a => a.Code, new { @class = "form-control" })
            </div>

            <div class="col-2 col-form-label">
                @Html.LabelFor(a => a.Name)
            </div>

            <div class="col-4">
                @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
            </div>
        </div>

        <div class="pl-2">
            <button type="submit" class="btn btn-info form-control">@Html.Icon("search")</button>
        </div>
    </div>
</form>

@(Html.Grid<WarOfEmpires.Models.Alliances.AllianceViewModel>("alliancesGrid", Url.Action("GetAlliances"), Url.Action("Details"), "alliancesSearch"))