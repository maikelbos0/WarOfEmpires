@model WarOfEmpires.Models.Alliances.CreateAllianceModel

@{
    ViewBag.Title = "Create alliance";
}

<h2>Create alliance</h2>

<p>
    In an alliance, a group of players can share information, resources and work together towards a common goal.
</p>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "html-only" })) {
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
            @Html.ValidationSummary(true, null, new { @class = "site-validation-summary text-danger" })

            <div class="form-group">
                @Html.LabelFor(a => a.Code, new { @class = "site-required" })
                @Html.TextBoxFor(a => a.Code, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Code, null, new { @class = "small form-text text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(a => a.Name, new { @class = "site-required" })
                @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Name, null, new { @class = "small form-text text-danger" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6 offset-6 col-md-3"><button type="submit" class="btn btn-primary form-control">Submit</button></div>
    </div>
}
