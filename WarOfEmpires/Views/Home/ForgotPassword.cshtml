@model WarOfEmpires.Models.Security.ForgotUserPasswordModel

@{
    ViewBag.Title = "Forgot password";
}

<h2>Forgot password</h2>

<form method="post" data-success-message="A password reset link has been sent to the email address you provided. This link will expire after one hour.">
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
            <div asp-validation-summary="ModelOnly" class="site-validation-summary text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="site-required"></label>
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="small form-text text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6 offset-6 col-md-3"><button type="submit" class="btn btn-primary w-100">Submit</button></div>
    </div>
</form>