@model WarOfEmpires.Models.Security.ChangeUserPasswordModel

@{
    ViewBag.Title = "Change password";
}

<h2>Change password</h2>

@using (Html.BeginForm()) {
    <div class="row">
        <div class="col-3"></div>

        <div class="col-6">
            @Html.ValidationSummary(true, null, new { @class = "site-validation-summary text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.CurrentPassword, new { @class = "site-required" })
                @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CurrentPassword, null, new { @class = "small form-text text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "site-required" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control password-strength" })
                @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "small form-text text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "site-required" })
                @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmNewPassword, null, new { @class = "small form-text text-danger" })
            </div>
        </div>

        <div class="col-3"></div>
    </div>

    <div class="row">
        <div class="col-6"></div>
        <div class="col-3"><button type="submit" class="btn btn-primary form-control">Submit</button></div>
        <div class="col-3"></div>
    </div>
}