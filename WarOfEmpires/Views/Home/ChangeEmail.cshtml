@model WarOfEmpires.Models.Security.ChangeUserEmailModel

@{
    ViewBag.Title = "Change email address";
}

<h2>Change email address</h2>

<div class="row">
    <div class="col-3"></div>

    <div class="col-6">
        @using (Html.BeginForm()) {
            @Html.ValidationSummary(true, null, new { @class = "site-validation-summary text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "site-required" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "small form-text text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NewEmail, new { @class = "site-required" })
                @Html.TextBoxFor(m => m.NewEmail, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.NewEmail, null, new { @class = "small form-text text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmNewEmail, new { @class = "site-required" })
                @Html.TextBoxFor(m => m.ConfirmNewEmail, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmNewEmail, null, new { @class = "small form-text text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>

    <div class="col-3"></div>
</div>