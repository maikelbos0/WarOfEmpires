@model WarOfEmpires.Models.Security.ChangeUserEmailModel

@{
    ViewBag.Title = "Change email address";
}

<h2>Change email address</h2>

<form method="post" data-success-message="An email has been sent to the new email address with a validation link. Follow the link in the email to confirm your new email address.">
    <div class="row">
        <div class="col-12 col-md-6 offset-md-3">
            <div asp-validation-summary="ModelOnly" class="site-validation-summary text-danger"></div>

            <div class="mb-3">
                <label asp-for="Password" class="site-required"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="small form-text text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewEmail" class="site-required"></label>
                <input type="text" asp-for="NewEmail" class="form-control" />
                <span asp-validation-for="NewEmail" class="small form-text text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmNewEmail" class="site-required"></label>
                <input type="text" asp-for="ConfirmNewEmail" class="form-control" />
                <span asp-validation-for="ConfirmNewEmail" class="small form-text text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6 offset-6 col-md-3"><button type="submit" class="btn btn-primary w-100">Submit</button></div>
    </div>
</form>