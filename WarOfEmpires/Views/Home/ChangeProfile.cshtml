@model WarOfEmpires.Models.Security.UserProfileModel

@{
    ViewBag.Title = "Edit user information";
}

<h2>Edit user information</h2>

<div class="row">
    <div class="col-3"></div>

    <div class="col-6">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "html-only" })) {
            @Html.ValidationSummary(true, null, new { @class = "site-validation-summary text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.DisplayName)
                @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.DisplayName, null, new { @class = "small form-text text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description, null, new { @class = "small form-text text-danger" })
            </div>

            <div class="form-group">
                <div class="form-check">
                    @Html.CheckBoxFor(m => m.ShowEmail, new { @class = "form-check-input" })
                    @Html.LabelFor(m => m.ShowEmail, new { @class = "form-check-label" })
                </div>
                @Html.ValidationMessageFor(m => m.ShowEmail, null, new { @class = "small form-text text-danger" })
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>

    <div class="col-3"></div>
</div>