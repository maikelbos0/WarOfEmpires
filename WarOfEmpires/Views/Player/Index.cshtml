@{
    ViewBag.Title = "Players";
}

<h2>Players</h2>

<div id="playersGrid">
</div>

@section Scripts{
    <script type="text/javascript">
        function playerRenderer(cell, value, dataRow) {
            cell.append($('<a>', { title: value, href: '@Url.Action("Details")?id=' + dataRow.Id }).text(value));
        }

        $('#playersGrid').datagridview({
            columns: [
                {
                    data: 'DisplayName',
                    header: 'Display name',
                    width: 80,
                    renderer: playerRenderer
                },
                {
                    data: 'PopulationString',
                    sortData: 'Population',
                    header: 'Population',
                    width: 20,
                    renderer: playerRenderer
                }
            ]
        });

        GridManager.initialize('#playersGrid', '@Url.Action("GetPlayers")');
    </script>
}