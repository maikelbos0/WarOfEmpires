@model WarOfEmpires.Models.Players.PlayerSearchModel

@{
    ViewBag.Title = "Players";
}

<h2>Players</h2>

<form id="playersSearch" class="search-form">
    <div class="row align-items-end">
        <div class="col-12 col-md-6 mb-3">
            @Html.LabelFor(m => m.DisplayName)
            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
        </div>

        <div class="col-12 col-md-6 text-end mb-3">
            <button type="submit" class="btn btn-info"><icon type="Search" /></button>
        </div>
    </div>
</form>

@(await Html.Grid<WarOfEmpires.Models.Players.PlayerViewModel>("playersGrid", Url.Action("GetPlayers"), @Url.Action("Details"), "playersSearch"))