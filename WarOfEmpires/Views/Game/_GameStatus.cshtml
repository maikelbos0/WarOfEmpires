@model WarOfEmpires.Models.Game.GameStatusViewModel

@switch (Model.Phase) {
    case "Truce":
        <div class="bg-success p-2 text-center fw-bold">
            The game is currently in truce. You can play as normal, but you can not attack.
        </div>
        break;

    case "Finished":
        <div class="bg-success p-2 text-center fw-bold">
            The game is finished.

            @if (Model.CurrentGrandOverlordId.HasValue) {
                <span>All hail <a asp-controller="Player" asp-action="Details" asp-route-id="@Model.CurrentGrandOverlordId">@Model.CurrentGrandOverlord</a>, the Grand Overlord!</span>
            }
        </div>
        break;

    default:
        if (Model.CurrentGrandOverlordId.HasValue && Model.CurrentGrandOverlordTime.HasValue) {
            <div class="bg-warning p-2 text-center fw-bold">
                <a asp-controller="Player" asp-action="Details" asp-route-id="@Model.CurrentGrandOverlordId">@Model.CurrentGrandOverlord</a> has been 
                Grand Overlord for @((int)Model.CurrentGrandOverlordTime.Value.TotalHours) hours and @Model.CurrentGrandOverlordTime.Value.Minutes minutes. 
                When they reach @Model.GrandOverlordHoursToWin.ToString(StringFormat.Integer) hours they will win!
            </div>
        }
        break;
}
