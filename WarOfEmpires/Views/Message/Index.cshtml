@{
    ViewBag.Title = "Received messages";
}

<h2>Received messages</h2>

<div id="messagesGrid">
</div>

@section Scripts{
    <script type="text/javascript">
        function messageRenderer(cell, value, dataRow) {
            cell.append($('<a>', { title: value, href: '@Url.Action("ReceivedDetails")?id=' + dataRow.Id }).text(value));

            if (!dataRow.IsRead) {
                cell.addClass("font-weight-bold");
            }
        }

        $('#messagesGrid').datagridview({
            columns: [
                {
                    data: 'DateString',
                    sortData: 'Date',
                    header: 'Received',
                    width: 15,
                    renderer: messageRenderer
                },
                {
                    data: 'Sender',
                    header: 'Sender',
                    width: 20,
                    renderer: messageRenderer
                },
                {
                    data: 'Subject',
                    header: 'Subject',
                    width: 65,
                    renderer: messageRenderer
                }
            ]
        });

        GridManager.initialize('#messagesGrid', '@Url.Action("GetReceivedMessages")', 'Date', true);
    </script>
}