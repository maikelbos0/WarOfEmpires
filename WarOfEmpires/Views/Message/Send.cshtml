@model WarOfEmpires.Models.Messages.MessageModel

@{
    ViewBag.Title = "Send message";
}

<h2>Send message</h2>

<p>
    Send a message to another player below.
</p>

@using (Html.BeginForm()) {
    @Html.HiddenFor(m => m.RecipientId)
    @Html.HiddenFor(m => m.Recipient)

    <div class="row">
        <div class="col-3 col-form-label">
            <strong>Recipient</strong>
        </div>

        <div class="col-9 col-form-label">
            @Model.Recipient
        </div>
    </div>

    <div class="row">
        <div class="col-3 col-form-label">
            <strong>@Html.LabelFor(m => m.Subject, new { @class = "site-required" })</strong>
        </div>

        <div class="col-9">
            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Subject, null, new { @class = "small form-text text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="col-3 col-form-label">
            <strong>@Html.LabelFor(m => m.Body)</strong>
        </div>

        <div class="col-9">
            @Html.TextAreaFor(m => m.Body, new { @class = "form-control", rows = 8 })
        </div>
    </div>

    <div class="row site-spaced-small">
        <div class="col-8"></div>
        <div class="col-4"><button type="submit" class="btn btn-primary form-control">Send</button></div>
    </div>
}