@model WarOfEmpires.Models.Messages.SentMessageDetailsViewModel

@{
    ViewBag.Title = $"Sent message";
}

<h2>Sent message</h2>

<div class="row">
    <div class="col-12 col-md-6 offset-md-3">
        <div class="form-group">
            <label>Recipient</label>
            <div class="form-control" readonly="readonly">@Model.Recipient</div>
        </div>

        <div class="form-group">
            <label>Date received</label>
            <div class="form-control" readonly="readonly">@Model.Date.ToString(StringFormat.Date)</div>
        </div>

        <div class="form-group">
            <label>Subject</label>
            <div class="form-control" readonly="readonly">@Model.Subject</div>
        </div>

        <div class="site-user-text">@Model.Body</div>
    </div>
</div>