@model WarOfEmpires.Models.Messages.SentMessageDetailsViewModel

@{
    ViewBag.Title = $"Sent message";
}

<h2>Sent message</h2>

<div class="row">
    <div class="col-12 col-md-6 offset-md-3">
        <div class="form-group">
            <label>Recipient</label>
            @Html.TextBox(nameof(Model.Recipient), Model.Recipient, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="form-group">
            <label>Date received</label>
            @Html.TextBox(nameof(Model.Date), Model.Date.ToString(StringFormat.Date), new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="form-group">
            <label>Subject</label>
            @Html.TextBox(nameof(Model.Subject), Model.Subject, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="site-user-text">@Model.Body</div>
    </div>
</div>