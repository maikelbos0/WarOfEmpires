@model WarOfEmpires.Models.Messages.SentMessageDetailsViewModel

@{
    ViewBag.Title = $"Sent message";
}

<h2>Sent message</h2>

<div class="row">
    <div class="col-3">Recipient</div>

    <div class="col-9">@Model.Recipient</div>
</div>

<div class="row">
    <div class="col-3">Date received</div>

    <div class="col-9">@Model.DateString</div>
</div>

<div class="row">
    <div class="col-3">Subject</div>

    <div class="col-9">@Model.Subject</div>
</div>

<div class="row">
    <div class="col-3">Body</div>

    <div class="col-9">
        <div class="site-user-text">@Model.Body</div>
    </div>
</div>