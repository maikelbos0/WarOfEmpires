@model WarOfEmpires.Models.Empires.BankedResourcesViewModel

@{
    ViewBag.Title = "Banking";
}

<h2>Banking</h2>

<p>
    Here you can bank your gold and resources to hide them from your enemies.
</p>

<form method="post" data-success-message="Your resources were stored in their banks.">
    <div asp-validation-summary="ModelOnly" class="site-validation-summary text-danger"></div>

    @Html.HiddenFor(m => m.Capacity)
    @Html.HiddenFor(m => m.BankedResources)
    @Html.HiddenFor(m => m.AvailableCapacity)
    @Html.HiddenFor(m => m.BankableResources)

    <table class="table table-borderless table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Capacity</th>
                <th class="d-none d-md-table-cell">Banked</th>
                <th class="d-none d-md-table-cell">Available capacity</th>
                <th>Bankable resources</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>Gold</td>
                <td>@Model.Capacity.Gold.ToString(StringFormat.Integer) <icon type="Gold" /></td>
                <td class="d-none d-md-table-cell">@Model.BankedResources.Gold.ToString(StringFormat.Integer) <icon type="Gold" /></td>
                <td class="d-none d-md-table-cell">@Model.AvailableCapacity.Gold.ToString(StringFormat.Integer) <icon type="Gold" /></td>
                <td>@Model.BankableResources.Gold.ToString(StringFormat.Integer) <icon type="Gold" /></td>
            </tr>

            <tr>
                <td>Food</td>
                <td>@Model.Capacity.Food.ToString(StringFormat.Integer) <icon type="Food" /></td>
                <td class="d-none d-md-table-cell">@Model.BankedResources.Food.ToString(StringFormat.Integer) <icon type="Food" /></td>
                <td class="d-none d-md-table-cell">@Model.AvailableCapacity.Food.ToString(StringFormat.Integer) <icon type="Food" /></td>
                <td>@Model.BankableResources.Food.ToString(StringFormat.Integer) <icon type="Food" /></td>
            </tr>

            <tr>
                <td>Wood</td>
                <td>@Model.Capacity.Wood.ToString(StringFormat.Integer) <icon type="Wood" /></td>
                <td class="d-none d-md-table-cell">@Model.BankedResources.Wood.ToString(StringFormat.Integer) <icon type="Wood" /></td>
                <td class="d-none d-md-table-cell">@Model.AvailableCapacity.Wood.ToString(StringFormat.Integer) <icon type="Wood" /></td>
                <td>@Model.BankableResources.Wood.ToString(StringFormat.Integer) <icon type="Wood" /></td>
            </tr>

            <tr>
                <td>Stone</td>
                <td>@Model.Capacity.Stone.ToString(StringFormat.Integer) <icon type="Stone" /></td>
                <td class="d-none d-md-table-cell">@Model.BankedResources.Stone.ToString(StringFormat.Integer) <icon type="Stone" /></td>
                <td class="d-none d-md-table-cell">@Model.AvailableCapacity.Stone.ToString(StringFormat.Integer) <icon type="Stone" /></td>
                <td>@Model.BankableResources.Stone.ToString(StringFormat.Integer) <icon type="Stone" /></td>
            </tr>

            <tr>
                <td>Ore</td>
                <td>@Model.Capacity.Ore.ToString(StringFormat.Integer) <icon type="Ore" /></td>
                <td class="d-none d-md-table-cell">@Model.BankedResources.Ore.ToString(StringFormat.Integer) <icon type="Ore" /></td>
                <td class="d-none d-md-table-cell">@Model.AvailableCapacity.Ore.ToString(StringFormat.Integer) <icon type="Ore" /></td>
                <td>@Model.BankableResources.Ore.ToString(StringFormat.Integer) <icon type="Ore" /></td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-6 offset-6 col-md-3 offset-md-9"><button type="submit" class="btn btn-primary w-100">Bank</button></div>
    </div>
</form>