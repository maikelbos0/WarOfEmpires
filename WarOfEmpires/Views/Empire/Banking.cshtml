@model WarOfEmpires.Models.Empires.BankedResourcesViewModel

@{
    ViewBag.Title = "Banking";
}

<h2>Banking</h2>

<p>
    Here you can bank your gold and resources to hide them from your enemies.
</p>

@using (Html.BeginForm(null, null, FormMethod.Post, new { data_success_message = "Your resources were stored in their banks." })) {
    @Html.ValidationSummary(true, null, new { @class = "site-validation-summary text-danger" })

    @Html.HiddenFor(m => m.Capacity.Gold)
    @Html.HiddenFor(m => m.Capacity.Food)
    @Html.HiddenFor(m => m.Capacity.Wood)
    @Html.HiddenFor(m => m.Capacity.Stone)
    @Html.HiddenFor(m => m.Capacity.Ore)

    @Html.HiddenFor(m => m.BankedResources.Gold)
    @Html.HiddenFor(m => m.BankedResources.Food)
    @Html.HiddenFor(m => m.BankedResources.Wood)
    @Html.HiddenFor(m => m.BankedResources.Stone)
    @Html.HiddenFor(m => m.BankedResources.Ore)

    @Html.HiddenFor(m => m.AvailableCapacity.Gold)
    @Html.HiddenFor(m => m.AvailableCapacity.Food)
    @Html.HiddenFor(m => m.AvailableCapacity.Wood)
    @Html.HiddenFor(m => m.AvailableCapacity.Stone)
    @Html.HiddenFor(m => m.AvailableCapacity.Ore)

    @Html.HiddenFor(m => m.BankableResources.Gold)
    @Html.HiddenFor(m => m.BankableResources.Food)
    @Html.HiddenFor(m => m.BankableResources.Wood)
    @Html.HiddenFor(m => m.BankableResources.Stone)
    @Html.HiddenFor(m => m.BankableResources.Ore)

    <table class="table table-borderless table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Capacity</th>
                <th class="d-none d-md-table-cell">Banked</th>
                <th class="d-none d-md-table-cell">Available capacity</th>
                <th>Bankable resources</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>Gold</td>
                <td>@Model.Capacity.Gold.ToString(StringFormat.Integer) @Html.Icon("Gold")</td>
                <td class="d-none d-md-table-cell">@Model.BankedResources.Gold.ToString(StringFormat.Integer) @Html.Icon("Gold")</td>
                <td class="d-none d-md-table-cell">@Model.AvailableCapacity.Gold.ToString(StringFormat.Integer) @Html.Icon("Gold")</td>
                <td>@Model.BankableResources.Gold.ToString(StringFormat.Integer) @Html.Icon("Gold")</td>
            </tr>

            <tr>
                <td>Food</td>
                <td>@Model.Capacity.Food.ToString(StringFormat.Integer) @Html.Icon("Food")</td>
                <td class="d-none d-md-table-cell">@Model.BankedResources.Food.ToString(StringFormat.Integer) @Html.Icon("Food")</td>
                <td class="d-none d-md-table-cell">@Model.AvailableCapacity.Food.ToString(StringFormat.Integer) @Html.Icon("Food")</td>
                <td>@Model.BankableResources.Food.ToString(StringFormat.Integer) @Html.Icon("Food")</td>
            </tr>

            <tr>
                <td>Wood</td>
                <td>@Model.Capacity.Wood.ToString(StringFormat.Integer) @Html.Icon("Wood")</td>
                <td class="d-none d-md-table-cell">@Model.BankedResources.Wood.ToString(StringFormat.Integer) @Html.Icon("Wood")</td>
                <td class="d-none d-md-table-cell">@Model.AvailableCapacity.Wood.ToString(StringFormat.Integer) @Html.Icon("Wood")</td>
                <td>@Model.BankableResources.Wood.ToString(StringFormat.Integer) @Html.Icon("Wood")</td>
            </tr>

            <tr>
                <td>Stone</td>
                <td>@Model.Capacity.Stone.ToString(StringFormat.Integer) @Html.Icon("Stone")</td>
                <td class="d-none d-md-table-cell">@Model.BankedResources.Stone.ToString(StringFormat.Integer) @Html.Icon("Stone")</td>
                <td class="d-none d-md-table-cell">@Model.AvailableCapacity.Stone.ToString(StringFormat.Integer) @Html.Icon("Stone")</td>
                <td>@Model.BankableResources.Stone.ToString(StringFormat.Integer) @Html.Icon("Stone")</td>
            </tr>

            <tr>
                <td>Ore</td>
                <td>@Model.Capacity.Ore.ToString(StringFormat.Integer) @Html.Icon("Ore")</td>
                <td class="d-none d-md-table-cell">@Model.BankedResources.Ore.ToString(StringFormat.Integer) @Html.Icon("Ore")</td>
                <td class="d-none d-md-table-cell">@Model.AvailableCapacity.Ore.ToString(StringFormat.Integer) @Html.Icon("Ore")</td>
                <td>@Model.BankableResources.Ore.ToString(StringFormat.Integer) @Html.Icon("Ore")</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col-6 offset-6 col-md-3 offset-md-9"><button type="submit" class="btn btn-primary form-control">Bank</button></div>
    </div>
}