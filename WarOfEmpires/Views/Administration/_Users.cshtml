@model WarOfEmpires.Models.Security.UserSearchModel

<h3 class="mt-3">Users</h3>

<form id="usersSearch" class="search-form">
    <div class="row align-items-end">
        <div class="col-12 col-md-6 mb-3">
            @Html.LabelFor(m => m.DisplayName)
            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
        </div>

        <div class="col-12 col-md-6 text-end mb-3">
            <button type="submit" class="btn btn-info"><icon type="Search" /></button>
        </div>
    </div>
</form>

@(await Html.Grid<WarOfEmpires.Models.Security.UserViewModel>("usersGrid", Url.Action("GetUsers"), @Url.Action("Details"), "usersSearch"))